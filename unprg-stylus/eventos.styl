
@import "nib"
@import "includes/inc-config.styl"

.evento
	margin: 60px auto
	
	
	.titulo
		font-size: 26px
		padding-bottom: 4px
		margin-bottom: 14px
		border-bottom: 1px solid rgb(180,180,180)
		font-weight: bold
		
	.info
		margin-bottom: 15px
		font-size: 0px
		box-shadow: 0px 0px 2px black
		display: inline-block
		margin-bottom: 20px
		
		div
			display: inline-block
			font-size: 14px
			padding: 4px 8px
		
		.tipo
			background-color: ccAzulOscuro
			color: white
		.oficina
			background-color: ccAzul
			color: ccAmarillo
			
	.galeria
		margin-top: 50px
		
		.subtitulo
			font-size: 22px
			font-weight: bold
			padding-bottom: 2px
			margin-bottom: 8px
			border-bottom: 1px solid rgb(200,200,200)

		.slider
			font-size: 0px
			
			.owl-item
				&:first-child .item
					margin-left: 0px
				&:last-child .item
					margin-right: 0px
					
			.item
				margin: 0px 3px
				
				img
					display: block
					vertical-align: middle
					width: 100%