@import "nib"

.admin-nav
	background-color: ccAzul
	border-radius: 4px
	box-shadow: -2px 2px 5px black
	color: white
	font-size: 16px
	padding: 16px
	
	.titulo
		text-align: center
		
		.unprg
			font-size: 24px
			margin-bottom: 4px
		.usuario
			font-size: 15px
			color: ccAmarillo
		
	& > ul
		display: block
		margin-top: 20px
		
		li
			border-top: 1px solid #2D73B5
			list-style: none
			
			a,p
				color: white
				display: block
				font-size: 17px
				height: 34px
				line-height: 34px
				text-decoration: none
			a:hover
				color: ccAmarillo
				text-decoration: underline
				
			ul
				margin-bottom: 15px
				margin-left: 24%
				li
					border-top: none
					list-style: square
					a
						font-size: 15px
						height: 22px
						line-height: 22px