@import "libs/inc-normalize.styl"
@import "libs/inc-icomoon.styl"
@import "includes/inc-config.styl"

@import "includes/inc-header.styl"
@import "includes/inc-nav.styl"
@import "includes/inc-footer.styl"

@import "nib"

*
	margin: 0
	padding: 0
	font-family: 'Titillium Web', sans-serif

html
	font-size: 10px
	
.wraper
	max-width: 1400px
	padding: 0 4%
	margin: 0 auto

.clean
	width: 100%
	clear: both
	height: 0px
	
[class^="boton-"], [class*=" boton-"]
	border: none
	cursor: pointer
	display: inline-block
	font-size: 16px
	border: none !important
	border-style: solid !important
	border-color: white !important
	border-width: 0px 0px 0.3em 0px !important
	box-sizing: border-box
	outline: none !important
	text-align: center
	transition: background-color 0ms !important
	padding: 0.2em 1em
	
.boton-amarillo
	background-color: ccAmarillo
	border-color: cfAmarillo !important
	color: black
	&:hover
		background-color: ccAmarillo+12%
	&:active
		border-bottom-width: 0.2em !important
		padding-top: 0.3em
		
.boton-azul
	background-color: ccAzul
	border-color: cfAzul !important
	color: white
	&:hover
		background-color: ccAzul+12%
	&:active
		border-bottom-width: 0.2em !important
		padding-top: 0.3em