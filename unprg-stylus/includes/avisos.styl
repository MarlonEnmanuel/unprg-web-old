
@import "nib"

.unprg-avisos
	background-color: ccAzul
	min-height: 100px
	font-size: 10px
	height: 100%
	overflow: auto
	
	.avisos-cont
		margin: 16px
	
	.titulo
		text-align: center
		color: ccAmarillo
		font-weight: bold
		font-size: 1.8em
		padding-bottom: 12px
		
	.avisos
		min-height: 362px
		
		.aviso
			box-sizing: border-box
			cursor: pointer
			display: block
			text-decoration: none
			transition: all 0.5s
			overflow: hidden
			border-top: 1px solid ccAzulClaro
			height: 70px
			padding: 6px 0px
			transition: all 800ms
			&:last-child
				border-bottom: 1px solid ccAzulClaro
			&:hover
				background-color: ccAzul+4%
				
			&__texto
				color: white
				font-size: 13.6px
				line-height: 20px
				height: 40px
				text-align: justify
			&__fecha
				color: ccAmarillo
				font-size: 12px
				line-height: 18px
				height: 18px
				text-align: right
		
		.ocultar
			border: none
			height: 0px
			padding: 0px
		.primero
			border-top: 2px solid ccAzulClaro
	
	.avisos-bg
		display: none
		position: fixed
		top: 0
		left: 0
		right: 0
		bottom: 0
		background-color: rgba(0,0,0,0.75);
		z-index: 100
		overflow: auto
		.wraper
			position: absolute
			right: 4%
			left: 4%
			top: 20px
			bottom: 20px
			padding: 0
			margin: 0
			
		.cerrar
			position: absolute
			right: 0
			span
				font-size: 30px
				color: white
				cursor: pointer
				transition: all .3s
				&:hover
					color: red
				
		.contenido
			display: none
			text-align: center
			margin-top: 20px
			position: absolute
			top: 20px
			bottom: 0px
			left: 0px
			right: 0px
			overflow: auto
			font-size: 0
			
			img
				max-width: 100%
				height: 100%
				width: auto
			.pdf
				width: 100%
				height: 100%
				max-width: 900px
				margin: 0 auto
				padding: 0 0
				border: 0
			
		.visible
			display: block