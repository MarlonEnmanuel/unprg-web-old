@import "nib"

header
	padding: 15px 0
	font-size: 16px
	
	.unprg-enlaces
		float: right
		text-align: right
		
		.otros
			a
				display: inline-block
				color: black
				padding: 0px 10px
				text-decoration: none
				transition: all 0.2s
				&:hover
					text-decoration: underline
				&:last-child
					padding-right: 0px
				&:not(:first-child)
					border-left: 1px solid black
		
		.redes-sociales
			margin-top: 10px
			a
				padding-left: 5px
				display: inline-block
			img
				height: 28px
				width: auto
		
	.unprg-inicio
		*
			vertical-align: middle
		.unprg-logo
			height: 100px
			width: auto
		.unprg-nombre
			height: 52px
			margin-left: 20px
			width: auto
			
	@media screen and (max-width: 870px)
		.unprg-enlaces
			display: block
			float: none
			
			.otros
				text-align: center
				white-space: nowrap
				overflow: auto
				a
					padding: 0px 10px !important
			.redes-sociales
				text-align: center
				a
					padding: 0px 10px !important
				
		.unprg-inicio
			margin-top: 20px
			text-align: center
			
	@media screen and (max-width: 460px)
		.unprg-inicio
			.unprg-logo
				width: auto
				height: auto
				max-width: 100px
				margin-bottom: 15px
			.unprg-nombre
				width: 100%
				height: auto
				margin-left: 0px