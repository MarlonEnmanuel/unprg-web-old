
@import "nib"

.unprg-avisos
	background-color: ccAzul
	min-height: 100px
	font-size: 10px
	height: 100%
	overflow: auto
	
	.aux
		width: 200px
		height: 200px
		border: 2px solid ccAzulClaro
		padding: 10px
		background-color: ccAmarillo
		transition: all 200ms
	.oculto
		height: 0px
		border: 0px solid ccAzulClaro
		padding: 0px
	
	.avisos-cont
		margin: 16px
	
	.titulo
		text-align: center
		color: ccAmarillo
		font-weight: bold
		font-size: 1.8em
		padding-bottom: 12px
		
	.avisos
		
		.carga
			text-align: center
			.texto
				color: white
				font-size: 16px
				text-align: center
				margin-top: 20px
				margin-bottom: 30px
			.icono
				color: white
				display: inline-block
				font-size: 40px
				animation: rotar 800ms infinite linear
		
		.aviso-wrap
			height: 70px
			opacity: 1
			overflow: hidden
			&:last-child .aviso
				border-bottom: 1px solid ccAzulClaro
			
		.aviso
			box-sizing: border-box
			cursor: pointer
			display: block
			text-decoration: none
			border-top: 1px solid ccAzulClaro
			height: 70px
			padding: 6px 0px
			transition: all 200ms
			color: white
			&:hover
				background-color: ccAzul+4%
				
			&__texto
				font-size: 13.6px
				line-height: 20px
				height: 40px
				text-align: justify
				text-outline: ellipsis
				overflow: hidden
			&__fecha
				color: ccAmarillo
				font-size: 12px
				line-height: 18px
				height: 18px
				text-align: right
		
		.aviso-hide
			height: 0px
			opacity: 0
			
		.destacado
			animation: parpadear 1800ms infinite
			&:hover
				animation: none
				color: ccAmarillo
			
	
	.avisos-bg
		display: none
		position: fixed
		top: 0
		left: 0
		right: 0
		bottom: 0
		background-color: rgba(0,0,0,0.75);
		z-index: 100
		.wraper
			position: absolute
			right: 4%
			left: 4%
			top: 3%
			bottom: 3%
			padding: 0
			margin: 0 auto
			
		.cerrar
			position: absolute
			right: 0
			font-size: 26px
			color: white
			cursor: pointer
			transition: all .3s
			&:hover
				color: rgb(255,100,100)
				
		.contenido
			display: none
			text-align: center
			position: absolute
			top: 34px
			bottom: 0px
			left: 0px
			right: 0px
			font-size: 0
			text-align: center
				
			.dowload
				position: absolute
				top: -34px
				left: 0px
				font-size: 16px
				line-height: 26px
				text-decoration: none
				display: inline-block
				color: white
				vertical-align: middle
				transition: all .3s
				&:hover
					color: rgb(100,200,255);
				span
					line-height: 26px
					font-size: 26px
					display: inline-block
					margin-right: 10px
					float: left
					
			
			.img
				display: inline-block
				max-width: 900px
				min-width: 35%
				height: 100%
				width: auto
				margin: auto
				overflow-x: auto
				*
					margin: 0px
					padding: 0px
				.imgTable
					display: table
					vertical-align: middle
					margin: auto
					height: 100%
					width: 100%
					.imgCell
						display: table-cell
						vertical-align: middle
						overflow: auto
						height: 100%
						width: 100%
						img
							display: inline-block
							width: 100%
							height: auto
							
				
			.pdf
				width: 100%
				height: 100%
				max-width: 900px
				margin: 0 auto
				padding: 0 0
				border: 0
			
		.visible
			display: block
			


@keyframes rotar
	from
		transform: rotate(0deg);
	to
		transform: rotate(360deg);
		
@keyframes parpadear
	0%
		color: white
	35%
		color: white
	50%
		color: ccAmarillo
	65%
		color: white
	100%
		color: white