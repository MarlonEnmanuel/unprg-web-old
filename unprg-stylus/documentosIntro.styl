
@import "nib"
@import "includes/inc-config.styl"

section
	margin: 40px 0px
	
	.wraper
		max-width: 860px
		
	.comunicado
		border: 1px solid black
		padding: 6px 30px
		
		h1
			font-size: 22px
			font-weight: bold
			text-align: center
			text-decoration: underline
		p
			font-size: 17px
			text-align: justify
			
		ol
			margin: 16px 0px
			font-size: 16px
			font-weight: bold
			li
				margin: 4px 0px
				margin-left: 40px
				a
					color: black
					display: inline-block
					font-weight: normal
					margin-left: 5px
					text-align: justify
					text-decoration: none
					vertical-align: top
					&:hover
						text-decoration: underline
						
		.firma
			font-weight: bold
			text-align: right
			margin: 16px 0px
			
			div
				display: inline-block
			p
				width: 100%
				text-align: center
				
	.contacto
		margin-top: 40px
		background-color: ccAzul
		color: white
		padding: 16px
		border-radius: 8px
		
		.titulo
			font-size: 20px
			text-align: center
			margin-bottom: 16px
		
		form
			
			div
				margin-top: 10px
				
				span
					display: inline-block
					font-size: 16px
					font-weight: bold
					width: 100px
				
				input[type=text]
					min-width: 200px
					padding: 0px 5px
					color: black
					font-size: 14px

				textarea
					box-sizing: border-box
					width: 100%
					max-width: 100%
					max-width: 100%
					min-height: 80px
					padding: 8px
					color: black
					border-radius: 4px
					font-size: 14px
					
				input[type=submit]
					box-shadow: 0px 0px 1px black
					color: black
					display: inline-block
					background-color: ccAmarillo
					border: none
					border-radius: 4px
					font-size: 18px
					font-weight: bold
					outline: none
					padding: 2px 20px
					
				.mensaje
					font-size: 15px
					color: ccAmarillo
					float: left