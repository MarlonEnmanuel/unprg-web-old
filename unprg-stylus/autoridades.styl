
@import "nib"
@import "includes/inc-config.styl"


section
	
	margin-top: 30px
	
	.wraper
		max-width: 1000px
	
	.unprg-sec
			
		.titulo
			border-bottom: 1px solid #ccc
			font-size: 2.4em
			font-weight: bold
			padding-bottom: 2px
			margin-bottom: 30px
		
	.autoridades
		font-size: 0px
		padding: 18px 0px
		text-align: center
		
		.titulo
			font-size: 24px
			text-align: left
		
		.persona
			font-size: 10px
			box-sizing: border-box
			padding: 14px 10px
			width: 50%
			display: inline-block
			
			.persona-nombre
				font-weight: bold
				font-size: 1.6em
			.persona-cargo
				font-size: 1.4em
				font-style: italic
				margin-top: 2px
			
			@media screen and (max-width: 620px)
				width: 100%
		
		.galeria
			margin-top: 20px
			font-size: 0px
			.item
				margin: 0px 5px
				border-radius: 8px
				overflow: hidden
				
				img
					width: 100%
					height: auto