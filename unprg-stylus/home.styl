
@import "nib"
@import "includes/config.styl"

@import "includes/slider.styl"
@import "includes/avisos.styl"

.unprg-portada
	font-size: 10px
	padding: 3.3em 0px
	
	@media screen and (max-width: 720px)
		font-size: 9px
	@media screen and (max-width: 620px)
		font-size: 8px
	@media screen and (max-width: 520px)
		font-size: 7px
	@media screen and (max-width: 420px)
		font-size: 6.5px
	
	.wraper
		transition: height 500ms ease-in-out
	
	.portada-col
		float: left
		box-sizing: border-box
	
	.unprg-slider
		width: 63%
	.unprg-avisos
		width: 34%
		margin-left: 3%
		
	@media screen and (max-width: 1024px)
		.unprg-slider
			width: 100%
		.unprg-avisos
			width: 100%
			margin-left: 0
			margin-top: 20px
	




.unprg-cuerpo
	
	.cuerpo-col
		box-sizing: border-box
		float: left

	.unprg-home
		width: 70%
		
	.unprg-panel
		width: 25%
		margin-left: 5%
		min-height: 300px
		background-color: ccAzulMedio
		
	@media screen and (max-width: 1024px)
		.unprg-home
			width: 100%
		.unprg-panel
			width: 100%
			margin-left: 0px
		
	.unprg-home
		
		.unprg-sec
			
			.titulo
				border-bottom: 1px solid #ccc
				font-size: 2.4em
				font-weight: bold
				padding-bottom: 2px
				margin-bottom: 20px
		

		.autoridades
			font-size: 0px
			padding: 18px 0px
			text-align: center
			
			.titulo
				font-size: 24px
				text-align: left
			
			.persona
				font-size: 10px
				box-sizing: border-box
				padding: 14px 10px
				width: 50%
				display: inline-block
				
				.persona-nombre
					font-weight: bold
					font-size: 1.6em
				.persona-cargo
					font-size: 1.4em
					font-style: italic
					margin-top: 2px
				
				@media screen and (max-width: 620px)
					width: 100%
			
			.galeria
				margin-top: 20px
				font-size: 0px
				.item
					margin: 0px 5px
					border-radius: 8px
					overflow: hidden
					
					img
						width: 100%
						height: auto
						

	.unprg-panel
		font-size: 0px
		padding-bottom: 20px
		
		.panel-elem
			box-sizing: border-box
			display: inline-block
			font-size: 10px
			padding: 20px 20px 0px 20px
			width: 100%
			
			.titulo
				font-size: 2em
				font-weight: bold
				color: white
				
			a
				display: block
				
				img
					margin: 10px auto
					border: 2px solid white
					display: block
					max-width: 90%
			
			iframe
				width: 100%
				height: auto
				margin: 10px 0px
				
			@media screen and (max-width: 1024px)
				width: auto
				float: left
			@media screen and (max-width: 420px)
				width: auto


.construccion
	margin: 50px 0px

	p
		font-size: 40px
		text-align: center
		font-weight: bold
		color: ccAzulMedio
		padding: 50px 0px
		border-top: 1px solid #ccc
		border-bottom: 1px solid #ccc