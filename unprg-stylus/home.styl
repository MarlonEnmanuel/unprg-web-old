
@import "nib"
@import "includes/config.styl"

.unprg-portada
	font-size: 10px
	padding: 3.6em 0px
	@media screen and (max-width: 720px)
		font-size: 9px
	@media screen and (max-width: 620px)
		font-size: 8px
	@media screen and (max-width: 520px)
		font-size: 7px
	@media screen and (max-width: 420px)
		font-size: 6.5px
	
	.portada-col
		float: left
		box-sizing: border-box
	
	.unprg-slider
		width: 63%
	.unprg-avisos
		width: 33%
		margin-left: 4%
		
	@media screen and (max-width: 1024px)
		.unprg-slider
			width: 100%
		.unprg-avisos
			width: 100%
			margin-left: 0
			margin-top: 20px
		
	.unprg-slider
		.item
			box-sizing: border-box
			position: relative
			border: 1px solid #444

			img
				display: block
				height: auto
				width: 100%
			p
				background-color: rgba(0,0,0,0.6)
				color: white;
				position: absolute
				
			.item-titulo
				font-size: 2em
				font-weight: bold
				left: 0
				padding: 0.4em 1em
				top: 0
			
			.item-descripcion
				bottom: 0px
				font-size: 1.6em
				left: 0px
				padding: 0.5em 1.25em
				right: 0px
	
	.unprg-avisos
		background-color: ccAzul
		box-sizing: border-box
		max-height: 440px
		min-height: 100px
		font-size: 10px
		padding: 16px 20px
		overflow: auto
		
		.titulo
			text-align: center
			color: ccAmarillo
			font-weight: bold
			font-size: 1.8em
			
		.avisos
			margin-top: 16px
			min-height: 362px
			
			.aviso
				border-top: 1px solid ccAzulClaro
				cursor: pointer
				display: block
				padding: 6px 0px
				text-decoration: none
				transition: all 0.2s
				&:last-child
					border-bottom: 1px solid ccAzulClaro
				&:hover
					background-color: ccAzul+4%
					
				&__texto
					color: white
					font-size: 1.4em
					text-align: justify
				&__fecha
					color: ccAmarillo
					font-size: 1.2em
					text-align: right
		
		.avisos-bg
			display: none
			position: fixed
			top: 0
			left: 0
			right: 0
			bottom: 0
			background-color: rgba(0,0,0,0.75);
			z-index: 100
			overflow: auto
			.wraper
				position: absolute
				right: 4%
				left: 4%
				top: 20px
				bottom: 20px
				padding: 0
				margin: 0
				
			.cerrar
				position: absolute
				right: 0
				span
					font-size: 30px
					color: white
					cursor: pointer
					transition: all .3s
					&:hover
						color: red
					
			.contenido
				display: none
				text-align: center
				margin-top: 20px
				position: absolute
				top: 20px
				bottom: 0px
				left: 0px
				right: 0px
				overflow: auto
				font-size: 0
				
				img
					max-width: 100%
					height: 100%
					width: auto
				.pdf
					width: 100%
					height: 100%
					max-width: 900px
					margin: 0 auto
					padding: 0 0
					border: 0
				
			.visible
				display: block


.unprg-cuerpo
	
	.cuerpo-col
		box-sizing: border-box
		float: left

	.unprg-home
		width: 70%
		
	.unprg-panel
		width: 25%
		margin-left: 5%
		min-height: 300px
		background-color: ccAzulMedio
		
	@media screen and (max-width: 1024px)
		.unprg-home
			width: 100%
		.unprg-panel
			width: 100%
			margin-left: 0px
		
	.unprg-home
		
		.unprg-sec
			
			.titulo
				border-bottom: 1px solid #ccc
				font-size: 2.4em
				font-weight: bold
				padding-bottom: 2px
				margin-bottom: 20px
		

		.autoridades
			font-size: 0px
			padding: 18px 0px
			text-align: center
			
			.titulo
				font-size: 24px
				text-align: left
			
			.persona
				font-size: 10px
				box-sizing: border-box
				padding: 14px 10px
				width: 50%
				display: inline-block
				
				.persona-nombre
					font-weight: bold
					font-size: 1.6em
				.persona-cargo
					font-size: 1.4em
					font-style: italic
					margin-top: 2px
				
				@media screen and (max-width: 620px)
					width: 100%
			
			.galeria
				margin-top: 20px
				font-size: 0px
				.item
					margin: 0px 5px
					border-radius: 8px
					overflow: hidden
					
					img
						width: 100%
						height: auto
						

	.unprg-panel
		font-size: 0px
		padding-bottom: 20px
		
		.panel-elem
			box-sizing: border-box
			display: inline-block
			font-size: 10px
			padding: 20px 20px 0px 20px
			width: 100%
			
			.titulo
				font-size: 2em
				font-weight: bold
				color: white
				
			a
				display: block
				
				img
					margin: 10px auto
					border: 2px solid white
					display: block
					max-width: 90%
			
			iframe
				width: 100%
				height: auto
				margin: 10px 0px
				
			@media screen and (max-width: 1024px)
				width: auto
				float: left
			@media screen and (max-width: 420px)
				width: auto


.construccion
	margin: 50px 0px

	p
		font-size: 40px
		text-align: center
		font-weight: bold
		color: ccAzulMedio
		padding: 50px 0px
		border-top: 1px solid #ccc
		border-bottom: 1px solid #ccc