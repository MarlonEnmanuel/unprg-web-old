
@import "nib"
@import "includes/inc-config.styl"

@import "includes/inc-slider.styl"
@import "includes/inc-avisos.styl"

.unprg-portada
	font-size: 10px
	padding: 3.3em 0px
	
	@media screen and (max-width: 720px)
		font-size: 9px
	@media screen and (max-width: 620px)
		font-size: 8px
	@media screen and (max-width: 520px)
		font-size: 7px
	@media screen and (max-width: 420px)
		font-size: 6.5px
	
	.wraper
		transition: height 500ms ease-in-out
	
	.portada-col
		float: left
		box-sizing: border-box
	
	.unprg-slider
		width: 63%
	.unprg-avisos
		width: 34%
		margin-left: 3%
		
	@media screen and (max-width: 1024px)
		.unprg-slider
			width: 100%
		.unprg-avisos
			width: 100%
			margin-left: 0
			margin-top: 20px
	




.unprg-cuerpo
	
	.cuerpo-col
		box-sizing: border-box
		float: left

	.unprg-home
		width: 72%
		
	.unprg-panel
		width: 24%
		margin-left: 4%
		
	@media screen and (max-width: 1024px)
		.unprg-home
			width: 100%
		.unprg-panel
			width: 100%
			margin-left: 0px
		
	.unprg-home
		
		.unprg-sec
			
			.titulo
				border-bottom: 1px solid #ccc
				font-size: 2.4em
				font-weight: bold
				padding-bottom: 2px
				margin-bottom: 20px
		

		.autoridades
			font-size: 0px
			padding: 18px 0px
			text-align: center
			
			.titulo
				font-size: 24px
				text-align: left
			
			.persona
				font-size: 10px
				box-sizing: border-box
				padding: 14px 10px
				width: 50%
				display: inline-block
				
				.persona-nombre
					font-weight: bold
					font-size: 1.6em
				.persona-cargo
					font-size: 1.4em
					font-style: italic
					margin-top: 2px
				
				@media screen and (max-width: 620px)
					width: 100%
			
			.galeria
				margin-top: 20px
				font-size: 0px
				.item
					margin: 0px 5px
					border-radius: 8px
					overflow: hidden
					
					img
						width: 100%
						height: auto
						

	.unprg-panel
		font-size: 0px
		padding-bottom: 30px
		min-height: 300px
		background-color: ccAzulOscuro
		box-shadow: 2px 2px 4px black
		
		.videos-bg
			display: none
			position: fixed
			top: 0
			left: 0
			right: 0
			bottom: 0
			background-color: rgba(0,0,0,0.75);
			z-index: 100
			
			.wraper
				position: absolute
				right: 4%
				left: 4%
				top: 3%
				bottom: 3%
				padding: 0
				margin: 0 auto
				text-align: center
				
			.boton
				text-align: right
				.cerrar
					font-size: 26px
					color: white
					cursor: pointer
					transition: all .3s
					&:hover
						color: rgb(255,100,100)
					
			.video-wrap
				position: relative
				width: 90%
				max-width: 800px
				display: none
				box-sizing: border-box
				margin: auto
				margin-top: 30%
				border: 6px solid white
				border-radius: 8px
				background-color: black
				
				@media screen and (max-width: 720px)
					border: 5px solid white
					border-radius: 7px
				@media screen and (max-width: 620px)
					border: 4px solid white
					border-radius: 6px
				@media screen and (max-width: 520px)
					border: 3px solid white
					border-radius: 5px
				@media screen and (max-width: 420px)
					border: 2px solid white
					border-radius: 4px
				
				@media screen and (max-height: 820px) and (orientation: landscape)
					margin-top: 7% 
				@media screen and (max-height: 740px) and (orientation: landscape)
					margin-top: 6%
				@media screen and (max-height: 660px) and (orientation: landscape)
					margin-top: 5%
				@media screen and (max-height: 580px) and (orientation: landscape)
					margin-top: 4%
				@media screen and (max-height: 500px) and (orientation: landscape)
					margin-top: 3%
				@media screen and (max-height: 420px) and (orientation: landscape)
					margin-top: 2%
				@media screen and (max-height: 340px) and (orientation: landscape)
					margin-top: 1%
					

				img
					width: 100%
					height: auto
					opacity: 0
			
				iframe
					position: absolute
					height: 100%
					width: 100%
					left: 0px
					top: 0px
				
		
		.panel-elem
			box-sizing: border-box
			display: block
			font-size: 10px
			padding: 30px 20px 0px 20px
			width: 100%
			
			
			.titulo
				font-size: 2em
				font-weight: bold
				color: white
				margin-bottom: 10px
				
			a
				display: block
				text-decoration: none
				color: white
				text-align: center
				
			img
				border: 2px solid white
				border-radius: 4px
				max-width: 100%
				height: auto
				box-sizing: border-box
				vertical-align: middle
				
			.icono
				font-size: 80px
				color: white
				display: inline-block
				margin-top: 10px
				
			.iconImg
				width: auto
				display: inline-block

			.img
				display: block
				cursor: pointer
				width: auto
				
			.video
				position: relative
				.icono
					color: #D72523
					font-size: 48px
					left: 50%
					margin-top: -24px
					margin-left: -24px
					cursor: pointer
					position: absolute
					text-align: center
					top: 50%
					text-shadow: 0px 0px 10px white
			
			iframe
				width: 100%
				height: auto
				margin: 10px 0px
				
			@media screen and (max-width: 1024px)
				width: 50%
				display: inline-block
				float: left
			@media screen and (max-width: 420px)
				width: auto
				float: none
				display: block


.construccion
	margin: 50px 0px

	p
		font-size: 40px
		text-align: center
		font-weight: bold
		color: ccAzulMedio
		padding: 50px 0px
		border-top: 1px solid #ccc
		border-bottom: 1px solid #ccc